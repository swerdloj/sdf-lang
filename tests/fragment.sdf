fn sd_circle(point: vec2, radius: float) -> float {
    return length(point) - radius;
}

fn main() {
    // [-1, 1] -> scale x to aspect ratio
    let uv = (gl_FragCoord.xy / window_dimensions - 0.5) * 2.;
    uv.x *= window_dimensions.x / window_dimensions.y;

    let color = vec3(0.);

    color += smoothstep(0.01, 0., sd_circle(uv - vec2(cos(time)*0.1, sin(time)*0.15), 0.5));

    color *= vec3(sin(time)*0.2, sin(time)*0.3, cos(time)*0.6) + 0.6;

    out_color = vec4(color, 1.);
}